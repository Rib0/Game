{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "noFallthroughCasesInSwitch": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./build",
        "lib": [
            "dom",
            "es2019"
        ]
    },
    "include": [
        "./src/javascript/games/balls"
    ],
    "exclude": [
        "node_modules"
    ]
}